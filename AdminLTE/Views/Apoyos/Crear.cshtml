@model ApoyoViewModel

@{
    ViewData["Title"] = "Crear Apoyo";
}

<div class="content-wrapper">

    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Crear Apoyo</h1>
                </div>
                <!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Apoyos</a></li>
                        <li class="breadcrumb-item active">Crear Apoyo</li>
                    </ol>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </div>

    <section class="content">
        <div class="container-fluid">
            <div class="col-md-12">
                <div class="card card-success">

                    <div class="card-header">
                        <h3 class="card-title">Apoyos</h3>
                    </div>

                    <div class="card-body">

                        <form asp-controller="Apoyos" asp-action="Crear">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <!-- Inicio Input Nombre -->
                            <div class="form-group">
                                <label asp-for="Nombre"></label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="bi bi-pencil-square"></i></span>
                                    </div>
                                    <input asp-for="Nombre" class="form-control" placeholder="Escriba el nombre del apoyo...">
                                </div>
                                <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>
                            <!-- Fin Input Nombre -->
                            <!-- Inicio Input Descripcion -->
                            <div class="form-group">
                                <label asp-for="Descripcion"></label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="bi bi-pencil-square"></i></span>
                                    </div>
                                    <input asp-for="Descripcion" class="form-control" placeholder="Escriba una descripción del apoyo...">
                                </div>
                                <span asp-validation-for="Descripcion" class="text-danger"></span>
                            </div>
                            <!-- Fin Input Descripcion -->
                            <!-- Inicio Input Cantidad -->
                            <div class="form-group">
                                <label asp-for="Cantidad"></label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="bi bi-pencil-square"></i></span>
                                    </div>
                                    <input asp-for="Cantidad" type="number" min="0" class="form-control" placeholder="Digite una cantidad del apoyo...">
                                </div>
                                <span asp-validation-for="Cantidad" class="text-danger"></span>
                            </div>
                            <!-- Fin Input Cantidad -->
                            <button type="submit" class="btn btn-success">Crear</button>
                            <a class="btn btn-secondary" asp-controller="Apoyos" asp-action="Listar">Cancelar </a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
