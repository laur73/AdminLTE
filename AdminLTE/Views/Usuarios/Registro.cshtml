@model RegistroViewModel

@{
    ViewData["Title"] = "Registro";
}

<div class="register-box">
    <div class="register-logo">
        <b>Registro</b>
    </div>

    <div class="card">
        <div class="card-body register-card-body">

            <form asp-controller="Usuarios" asp-action="Registro">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="input-group mb-3">
                    <input asp-for="Nombre" type="text" class="form-control" placeholder="Nombre">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-user"></span>
                        </div>
                    </div>
                </div>
                <span asp-validation-for="Nombre" class="text-danger"></span>

                <div class="input-group mb-3">
                    <input asp-for="ApePat" type="text" class="form-control" placeholder="Apellido Paterno">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-user"></span>
                        </div>
                    </div>
                </div>
                <span asp-validation-for="ApePat" class="text-danger"></span>

                <div class="input-group mb-3">
                    <input asp-for="ApeMat" type="text" class="form-control" placeholder="Apellido Materno">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-user"></span>
                        </div>
                    </div>
                </div>
                <span asp-validation-for="ApeMat" class="text-danger"></span>

                <div class="input-group mb-3">
                    <input asp-for="Email" type="email" class="form-control" placeholder="Email">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>

                <div class="input-group mb-3">
                    <input asp-for="Password" type="password" class="form-control" placeholder="Contraseña">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>

                <div class="d-grid gap-2 d-md-block">
                    <button class="btn btn-block btn-danger" type="submit">Registrarse</button>
                    <a class="btn btn-block btn-primary" asp-controller="Usuarios" asp-action="Login">Iniciar Sesión</a>
                </div>
            </form>
        </div>
        <!-- /.form-box -->
    </div>
    <!-- /.card -->
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}