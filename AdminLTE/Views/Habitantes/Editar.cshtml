@model HabitanteViewModel

@{
    ViewData["Title"] = "Editar Habitante";
}

<div class="content-wrapper">

    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Editando Habitante: @Model.Nombre</h1>
                </div>
                <!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Habitantes</a></li>
                        <li class="breadcrumb-item active">Editar Habitante</li>
                    </ol>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </div>

    <section class="content">
        <div class="container-fluid">
            <div class="col-md-12">
                <div class="card card-warning">

                    <div class="card-header">
                        <h3 class="card-title">Habitantes</h3>
                    </div>

                    <div class="card-body">

                        <form asp-controller="Habitantes" asp-action="Editar">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input asp-for="IdHabitante" type="hidden" class="form-control">
                            <!-- Inicio Input Nombre -->
                            <div class="form-group">
                                <label>Nombre: </label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="bi bi-person"></i></span>
                                    </div>
                                    <input asp-for="Nombre" type="text" class="form-control" placeholder="Escriba el nombre...">
                                </div>
                                <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>
                            <!-- Fin Input Nombre -->
                            <!-- Inicio Input Apellido Paterno -->
                            <div class="form-group">
                                <label>Apellido Paterno: </label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="bi bi-person"></i></span>
                                    </div>
                                    <input asp-for="ApePat" type="text" class="form-control" placeholder="Escriba el apellido paterno...">
                                </div>
                                <span asp-validation-for="ApePat" class="text-danger"></span>
                            </div>
                            <!-- Fin Input Apellido Paterno -->
                            <!-- Inicio Input Apellido Materno -->
                            <div class="form-group">
                                <label>Apellido Materno: </label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="bi bi-person"></i></span>
                                    </div>
                                    <input asp-for="ApeMat" type="text" class="form-control" placeholder="Escriba el apellido materno...">
                                </div>
                                <span asp-validation-for="ApeMat" class="text-danger"></span>
                            </div>
                            <!-- Fin Input Apellido Materno -->
                            <!-- Inicio Input Sexo-->
                            <div class="form-group">
                                <label>Sexo: </label>
                                <div class="col-sm-6 ">
                                    <div class="form-check">
                                        <input asp-for="Sexo" class="form-check-input" type="radio" value="Hombre">
                                        <label class="form-check-label">Hombre</label>
                                    </div>
                                </div>
                                <div class="col-sm-6 ">
                                    <div class="form-check">
                                        <input asp-for="Sexo" class="form-check-input" type="radio" value="Mujer">
                                        <label class="form-check-label">Mujer</label>
                                    </div>
                                </div>
                                <span asp-validation-for="Sexo" class="text-danger"></span>
                            </div>
                            <!-- Fin Input Sexo -->
                            <!-- Inicio Input Direccion -->
                            <div class="form-group">
                                <label>Domicilio: </label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="bi bi-geo-alt"></i></span>
                                    </div>
                                    <input asp-for="Direccion" type="text" class="form-control" placeholder="Escriba el domicilio...">
                                </div>
                                <span asp-validation-for="Direccion" class="text-danger"></span>
                            </div>
                            <!-- Fin Input Direccion -->
                            <!-- Inicio Input Fecha Nacimiento -->
                            <div class="form-group">
                                <label>Fecha Nacimiento: </label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="far fa-calendar-alt"></i></span>
                                    </div>
                                    <input asp-for="FechaNac" type="text" class="form-control" data-inputmask-alias="datetime"
                                           data-inputmask-inputformat="dd/mm/yyyy" data-mask placeholder="Escriba la fecha de nacimiento...">
                                </div>
                                <span asp-validation-for="FechaNac" class="text-danger"></span>
                            </div>
                            <!-- Fin Input Fecha Nacimiento -->
                            <!-- Inicio Input Telefono -->
                            <div class="form-group">
                                <label>Teléfono: </label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="bi bi-telephone"></i></span>
                                    </div>
                                    <input asp-for="Telefono" type="text" class="form-control" data-inputmask='"mask": "(999) 999-9999"' data-mask placeholder="Escriba el telefono">
                                </div>
                                <span asp-validation-for="Telefono" class="text-danger"></span>
                            </div>
                            <!-- Fin Input Telefono -->
                            <button type="submit" class="btn btn-warning">Editar</button>
                            <a class="btn btn-secondary" asp-controller="Habitantes" asp-action="Listar">Cancelar </a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>


    <!-- jQuery -->
    <script src="../../plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="../../plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- InputMask -->
    <script src="../../plugins/moment/moment.min.js"></script>
    <script src="../../plugins/inputmask/jquery.inputmask.min.js"></script>



    <!-- Page specific script -->
    <script>
        $(function() {
            //Initialize Select2 Elements
            $('.select2').select2()

            //Initialize Select2 Elements
            $('.select2bs4').select2({
                theme: 'bootstrap4'
            })

            //Datemask yy/mm/dd
            $('#datemask').inputmask('dd/mm/yyyy', { 'placeholder': 'dd/mm/yyyy' })
            //Datemask2 dd/mm/yyyy
            $('#datemask2').inputmask('mm/dd/yyyy', { 'placeholder': 'mm/dd/yyyy' })
            //Datemask2 dd/mm/yyyy
            $('#telephone').inputmask('(999) 999-9999', { 'placeholder': '(999) 999-9999' })
            //Money Euro
            $('[data-mask]').inputmask()


        })

    </script>

</div>