@model HabitanteViewModel

@{
    ViewData["Title"] = "Eliminar Habitante";
}

<div class="content-wrapper">

    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Eliminando Habitante @Model.Nombre</h1>
                </div>
                <!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Habitantes</a></li>
                        <li class="breadcrumb-item active">Eliminar Habitante</li>
                    </ol>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </div>

    <section class="content">
        <div class="container-fluid">
            <div class="col-md-12">
                <div class="card card-danger">

                    <div class="card-header">
                        <h3 class="card-title">Habitantes</h3>
                    </div>

                    <div class="card-body">

                        <form asp-controller="Habitantes" asp-action="Eliminar">
                            <input asp-for="IdHabitante" type="hidden" class="form-control">

                            <div class="alert alert-danger alert-dismissible col-md-4">
                                <h5><i class="icon fas fa-ban"></i>Advertencia</h5>
                                ¿Está seguro de eliminar el habitante: @Model.Nombre?
                            </div>

                            <button type="submit" class="btn btn-danger">Eliminar</button>
                            <a class="btn btn-secondary" asp-controller="Habitantes" asp-action="Listar">Cancelar </a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

</div>